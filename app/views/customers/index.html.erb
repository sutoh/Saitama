<%= render "shared/toolbar_for_index", model_name: controller_name , title_name: "お客様" %>

<div class="well">
  <table class="table table-responsive">
    <thead>
      <tr>
        <th>会社名</th>
        <th>郵便番号</th>
        <th>住所</th>
        <th>Web</th>
        <th>電話番号</th>
        <th >詳細</th>
      </tr>
    </thead>
  
    <tbody>
      <% @customers.each do |customer| %>
      <tr>
        <td><%= link_to customer.name, customer %></td>
        <td><%= customer.postalcode %></td>
        <td><%= customer.address %></td>
        <td><%= customer.website %></td>
        <td><%= customer.phone_num %></td>
        <td>
          <%= link_to edit_customer_path(customer), title: "Edit" do %>
          <i class="icon-edit"></i>
          <% end %>
        
          <%= link_to customer, title: "Delete", method: :delete, data: { confirm: 'Are you sure?' } do %>
          <i class="icon-trash"></i>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= paginate @customers %>
