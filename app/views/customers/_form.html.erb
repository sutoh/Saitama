<div class="well">
  <%= form_for(@customer, html: {class: "form-horizontal"}) do |f| %>
  <legend><%= @action_name.capitalize + " " + @controller.classify %> </legend>
  <% if @customer.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@customer.errors.count, "error") %> prohibited this customer from being saved:</h2>

    <ul>
      <% @customer.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <div class="field control-group">
    <%= f.label :name, class: "control-label" %>
    <div class="controls">
      <%= f.text_field :name %>
    </div>
  </div>
  <div class="field control-group">
    <%= f.label :postalcode, class: "control-label" %>
    <div class="controls">
      <%= f.number_field :postalcode %>
    </div>
  </div>
  <div class="field control-group">
    <%= f.label :address, class: "control-label" %>
    <div class="controls">
      <%= f.text_field :address %>
    </div>
  </div>
  <div class="field control-group">
    <%= f.label :website, class: "control-label" %>
    <div class="controls">
      <%= f.text_field :website %>
    </div>
  </div>
  <div class="field control-group">
    <%= f.label :phone_num, class: "control-label" %>
    <div class="controls">
      <%= f.text_field :phone_num %>
    </div>
  </div>
  <div class="actions control-group">
    <div class="controls">
      <%= f.submit :class => "btn btn-primary"%>
      <%= link_to 'Cancel', customers_path, class: 'btn' %>
    </div>
  </div>
  <% end %>
</div>
