
<%= form_for([@employee, @employee_skill], :html =>{:class => "form-horizontal"}) do |f| %>
  <% if @employee_skill.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@employee_skill.errors.count, "error") %> prohibited this employee_skill from being saved:</h2>

      <ul>
      <% @employee_skill.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field control-group">
    <%= f.label :skill_id, :class => "control-label" %>
    <div class="controls">
      <%= f.select :skill_id, @skills.map{|s|[s.name, s.id]} %>
    </div>
  </div>
  <div class="field control-group">
    <%= f.label :level, :class => "control-label" %>
    <div class="controls">
      <%= f.number_field :level %>
    </div>
  </div>
  <div class="actions control-group">
    <div class="controls">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>