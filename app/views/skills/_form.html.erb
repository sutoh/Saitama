<div class="well">
  <%= form_for(@skill, html: {class: "form-horizontal"}) do |f| %>
  <legend><%= controller.action_name.capitalize + " " + params[:controller].classify %> </legend>
  <% if @skill.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@skill.errors.count, "error") %> prohibited this skill from being saved:</h2>

    <ul>
      <% @skill.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <div class="field control-group">
    <%= f.label :name, class: "control-label" %>
    <div class="controls">
      <%= f.text_field :name, class: "span6"%>
    </div>
  </div>
  <div class="field control-group">
    <%= f.label :category, class: "control-label" %>
    <div class="controls">
      <%= f.number_field :category %>
    </div>
  </div>
  <div class="field control-group">
    <%= f.label :note, class: "control-label" %>
    <div class="controls">
      <%= f.text_area :note, rows: "5", class: "span8" %>
    </div>
  </div>
  <div class="actions control-group">
    <div class="controls">
      <%= f.submit class: "btn btn-primary"%>
      <%= link_to 'Cancel', skills_path, class: 'btn' %>
    </div>
    <% end %>
  </div>
