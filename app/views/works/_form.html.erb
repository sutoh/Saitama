<%= form_for(@work, :html => {:class => "form-horizontal"}) do |f| %>
  <% if @work.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@work.errors.count, "error") %> prohibited this work from being saved:</h2>

      <ul>
      <% @work.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field control-group">
    <%= f.label :"社員名", :class => "control-label" %>
    <div class="controls">
      <%= select :work, :employee_id, @employee.map{|e| [full_name(e.family_name,e.given_name), e.id]} %>
    </div>
  </div>
  <div class="field control-group">
    <%= f.label :"担当営業名", :class => "control-label" %>
    <div class="controls">
      <%= f.number_field :sales_staff_id %>
    </div>
  </div>
  <div class="field control-group">
    <%= f.label :"お客様名", :class => "control-label" %>
    <div class="controls">
      <%= f.number_field :customer_id %>
    </div>
  </div>
  <div class="actions control-group">
    <div class="controls">
      <%= f.submit :class => "btn" %>
    </div>
  </div>
<% end %>
