<div class="page-header">
  <h1>社員資格情報</h1>
</div>
<h2><%= @employee.full_name %></h2>

<div class="well">
  <table class="table">
    <thead>
      <tr>
        <th>License</th>
        <th>Acquisition date</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @employee_licenses.each do |employee_license| %>
        <tr>
          <td><%= employee_license.name %></td>
          <td><%= employee_license.acquisition_date %></td>
          <td>
            <div class="btn-group">
              <%= link_to 'Edit', edit_employee_employee_license_path(params[:employee_id], employee_license), :class => "btn" %>
              <%= link_to 'Destroy', employee_employee_license_path(params[:employee_id], employee_license), method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-warning" %>
            </div>  
          </td>
        </tr>
      <% end %>
      <%= form_for([@employee, @employee_license]) do |f| %>
        <tr>
          <td>
            <%= f.select :license_id, @licenses.map{|l|[l.name, l.id]} %>
          </td>
          <td>
            <%= f.date_select :acquisition_date, {},{:class => "input-small"} %>
          </td>
          <td>
            <%= f.submit :class => "btn btn-primary" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br />


<%= link_to 'Back', employees_path, :class => "btn" %>

