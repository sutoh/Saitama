<h1>Profile#index</h1>
<p>Find me in app/views/profile/index.html.erb</p>



<div class="span5">
	<table class="table table-striped">
		<tr>
			<td><b>name:</b></td>
			<td><%= @employee.family_name + " " + @employee.given_name%></td>
		</tr>
		<tr>
			<td><b>kana:</b></td>
			<td><%= @employee.family_name_kana + " " + @employee.given_name_kana %></td>
		</tr>
		<tr>
			<td><b>Gender:</b></td>
			<td><%= @employee.gender %></td>
		</tr>
		<tr>
			<td><b>Birthday:</b></td>
			<td><%= @employee.birthday %></td>
		</tr>
		<tr>
  		<td><b>Experience:</b></td>
 			<td><%= @employee.experience %></td>
		</tr>
		<tr>
	  	<td><b>Entrance date:</b></td>
			<td><%= @employee.entrance_date %></td>
		</tr>
		<tr>
		  <td><b>Postalcode:</b></td>
			<td><%= @employee.postalcode %></td>
		</tr>
		<tr>
  		<td><b>Address:</b></td>
	  	<td><%= @employee.address %></td>
		</tr>
		<tr>
		  <td><b>Station:</b></td>
	  	<td><%= @employee.station %></td>
		</tr>
		<tr>
	  	<td><b>Education:</b></td>
		  <td><%= @employee.education %></td>
		</tr>
		<tr>
		  <td><b>Self pr:</b></td>
	  	<td><%= @employee.self_pr %></td>
		</tr>
		<tr>
	  	<td><b>Tech flg:</b></td>
		  <td><%= @employee.tech_flg %></td>
		</tr>
		<tr>
		  <td><b>Staff flg:</b></td>
	  	<td><%= @employee.staff_flg %></td>
		</tr>
		<tr>
			<td><b>Del flg:</b></td>
			<td><%= @employee.del_flg %></td>
		</tr>
		<tr>
  		<td><b>Department:</b></td>
	  	<td><%= @employee.department_id %></td>
  	</tr>
	</table>
	<%= link_to "Edit", edit_employee_path(@employee), :class => "btn" %>
</div>

<div class="span7">
	<b>Licenses</b>
	<table class="table table-striped table-hover">
	  <tr>
  	  <td>License</td>
    	<td>Acquisition date</td>
	  </tr>

		<% @licenses.licenses.each do |license| %>
		  <% employee_license = license.employee_licenses.find(:first) %>
  		<tr>
    		<td>
    			<%= link_to(license.name, edit_employee_employee_license_path(@employee, employee_license))
    			%>
    		</td>
		    <td><%= link_to employee_license.acquisition_date, edit_employee_employee_license_path(@employee, employee_license) %>
		    </td>
		  </tr>
		<% end %>
	</table>

	<b>Skills</b>
	<table class="table table-striped table-hover">
  	<tr>
    	<td>Skill</td>
	    <td>Level</td>
  	</tr>

		<% @skills.skills.each do |skill| %>
			<% employee_skill = skill.employee_skills.find(:first) %>
	  	<tr>
  	  	<td><%= link_to skill.name, edit_employee_employee_skill_path(@employee, employee_skill) %></td>
    		<td><%= link_to employee_skill.level, edit_employee_employee_skill_path(@employee, employee_skill) %></td>
	  	</tr>
		<% end %>
	</table>
</div>

