<%= render "shared/toolbar_for_index", model_name: controller_name %>

<div class="well">
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Validity term</th>
        <th>Publisher</th>
        <th>Note</th>
        <th style="width: 36px;"></th>
      </tr>
    </thead>

    <tbody>
      <% @licenses.each do |license| %>
      <tr>
        <td><%= link_to license.name, license %></td>
        <td><%= license.validity_term %></td>
        <td><%= license.publisher %></td>
        <td><%= license.note %></td>
        <td>
          <%= link_to edit_license_path(license), title: "Edit" do %>
          <i class="icon-edit"></i>
          <% end %>
          
          <%= link_to license, title: "Delete", method: :delete, data: { confirm: 'Are you sure?' } do %>
          <i class="icon-trash"></i>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= paginate @licenses %>
