<div class="well">
  <%= form_for(@license, html: {class: "form-horizontal"}) do |f| %>
  <legend><%= controller.action_name.capitalize + " " + params[:controller].classify %> </legend>
  <% if @license.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@license.errors.count, "error") %> prohibited this license from being saved:</h2>

    <ul>
      <% @license.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <div class="field control-group">
    <%= f.label :name, class: "control-label" %>
    <div class="controls">
      <%= f.text_field :name %>
    </div>
  </div>
  <div class="field control-group">
    <%= f.label :validity_term, class: "control-label" %>
    <div class="controls">
      <%= f.text_field :validity_term %>
    </div>
  </div>
  <div class="field control-group">
    <%= f.label :publisher, class: "control-label" %>
    <div class="controls">
      <%= f.text_area :publisher, rows: "5" %>
    </div>
  </div>
  <div class="field control-group">
    <%= f.label :note, class: "control-label" %>
    <div class="controls">
      <%= f.text_area :note, rows: "5" %>
    </div>
  </div>
  <div class="actions control-group">
    <div class="controls">
      <%= f.submit class: "btn btn-primary" %>
      <%= link_to 'Cancel', licenses_path, class: 'btn' %>
    </div>
  </div>
  <% end %>
</div>
