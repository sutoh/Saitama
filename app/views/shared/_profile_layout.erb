
  <div class="well card">
    <div class="span2">
       <%= link_to image_tag(@employee.image.url(:thumb), {class: "logo frame"}), edit_employee_path(@employee) %>
    </div>
    <div class="span3">
      <p><%= @employee.user.login_id if !@employee.user.nil? %></p>
      <p><strong><%= @employee.family_name + " " + @employee.given_name%></strong></p>
      <p><strong><%= @employee.family_name_kana + " " + @employee.given_name_kana %></strong></p>
      <%= link_to "変更", edit_employee_path(@employee), :class => "btn btn-success" %>
    </div>
  </div>
  <div class="collapse">
    <ul class="link">
      <li class="twitter">Twitter</li>
      <li class="facebook">FaceBook</li>
      <li class="linkdin">LinkdIn</li>
      <li class="google">Google+</li>
      <li class="mixi">mixi</li>
      <li class="setting">設定</li>
    </ul>
  </div>



<div class="content">
  <div class="col">
    <div class="waku kihon">
      <div class="waku-header">
        <div class="waku-name">基本情報</div>
        <div class="edit">
          <a href="#kihon">編集</a>
        </div>
      </div>
      <div class="waku-detail-group">
        <div class="waku-detail">
          <div class="waku-detail-header">性別</div>
          <div class="waku-detail-data"><%= @employee.gender %></div>
        </div>
        <div class="waku-detail">
          <div class="waku-detail-header">年齢</div>
          <div class="waku-detail-data">
            <%= nenrei(@employee.birthday) if !@employee.birthday.nil?  %>
          </div>
        </div>
        <div class="waku-detail">
          <div class="waku-detail-header">誕生日</div>
          <div class="waku-detail-data"><%= @employee.birthday %></div>
        </div>
        <div class="waku-detail">
          <div class="waku-detail-header">入社年月日</div>
          <div class="waku-detail-data"><%= @employee.experience %></div>
        </div>
        <div class="waku-detail">
          <div class="waku-detail-header">経験年数</div>
          <div class="waku-detail-data"><%= @employee.experience %></div>
        </div>
        <div class="waku-detail">
          <div class="waku-detail-header">最終学歴</div>
          <div class="waku-detail-data"><%= @employee.education %></div>
        </div>
      </div>
    </div>
    <div class="waku sumika">
      <div class="waku-header">
        <div class="waku-name">住所</div>
        <div class="edit">
          <a href="#sumika">編集</a>
        </div>
      </div>
      <div class="waku-detail-group">
        <div class="gmap">
          <%= gmaps4rails(@json) %>
        </div>
        <div class="waku-detail">
          <div class="waku-detail-header">郵便番号</div>
          <div class="waku-detail-data"><%= @employee.postalcode %></div>
        </div>
        <div class="waku-detail">
          <div class="waku-detail-header">最寄り駅</div>
          <div class="waku-detail-data"><%= @employee.station %></div>
        </div>
        <div class="waku-detail">
          <div class="waku-detail-header">住所</div>
          <div class="waku-detail-data"><%= @employee.address %></div>
        </div>
      </div>
    </div>
    <div class="waku appeal">
      <div class="waku-header">
        <div class="waku-name">アピール</div>
        <div class="edit">
          <a href="#appeal">編集</a>
        </div>
      </div>
      <div class="waku-detail-group">
        <div class="waku-detail">
          <div class="waku-detail-header">自己PR</div>
          <div class="waku-detail-data"><%= @employee.self_pr %></div>
        </div>
      </div>
    </div>
    <div class="waku work">
      <div class="waku-header">
        <div class="waku-name">スキル</div>
        <div class="edit">
          <a href="#work">編集</a>
        </div>
      </div>
      <div>
        <ul class="listview iconic">
          <li>
            <div class="icon">
              <%= image_tag 'lisences/ruby-logo.jpg', {class: "lisence_logo"} %>
              </div>
            <div class="data">
              <h4>使える技能</h4>
              <p>★スキルレベル☆</p>
            </div>
          </li>
          <% @skills.skills.each do |skill| %>
          <% employee_skill = skill.employee_skills.find(:first) %>
          <li>
            <div class="icon">
              <i class="icon-digg"></i>
            </div>
            <div class="data">
              <h4><%= link_to skill.name, edit_employee_employee_skill_path(@employee, employee_skill) %></h4>
              <p>
                <% employee_skill.level.times do %>★<% end %>
              </p>
            </div>
          </li>
          <% end %>
        </ul>
      </div>
    </div>
    
  </div>
  
  <div class="col">
        <div class="waku work-detail">
      <div class="waku-header">
        <div class="waku-name">経歴</div>
        <div class="edit">
          <a href="#work-detail">編集</a>
        </div>
      </div>
      <div class="waku-detail-group">
        <ul class="listview iconic">
          <li>
            <div class="icon">
              <%= image_tag 'lisences/java-logo.png', {class: "lisence_logo"} %>
              </div>
            <div class="data">
              <h4>業務タイトル</h4>
              <p>業務内容</p>
            </div>
          </li>
          <% @work_details.each do |wd| %>
            <% #employee_license = license.employee_licenses.find(:first) %>
          <li>
            <div class="icon">
              <i class="icon-digg"></i>
            </div>
            <div class="data">
              業務タイトル
              <p>業務内容
              </p>
            </div>
          </li>
          <% end %>
        </ul>
      </div>
    </div>
    <div class="waku skill">
      <div class="waku-header">
        <div class="waku-name">資格</div>
        <div class="edit">
          <a href="#skill">編集</a>
        </div>
      </div>
      <div class="waku-detail-group">
      
      
        <ul class="listview iconic">
          <li>
            <div class="icon">
              <%= image_tag 'lisences/ruby-logo.jpg', {class: "lisence_logo"} %>
              </div>
            <div class="data">
              <h4>取得資格</h4>
              <p>取得日</p>
            </div>
          </li>
          <% @licenses.licenses.each do |license| %>
            <% employee_license = license.employee_licenses.find(:first) %>
          <li>
            <div class="icon">
              <i class="icon-digg"></i>
            </div>
            <div class="data">
              <%= link_to(license.name, edit_employee_employee_license_path(@employee, employee_license))%>
              <p>
                <%= link_to employee_license.acquisition_date, 
              edit_employee_employee_license_path(@employee, employee_license) %>
              </p>
            </div>
          </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>

<div id="modal">
  <div id="kihon" class="open">
    <a href="#" class="close_overlay">×</a>
    <span class="modal_window waku kihon">
      <div class="waku-header">
        <div class="waku-name">基本情報</div>
      </div>
      <%= form_for(@employee) do |f| %>
        <div class="waku-detail-group">
          <div class="waku-detail">
            <div class="waku-detail-header">性別</div>
            <div class="waku-detail-data"><%= f.number_field :gender %></div>
          </div>
          <div class="waku-detail">
            <div class="waku-detail-header">年齢</div>
            <div class="waku-detail-data">
              <%= nenrei(@employee.birthday) if !@employee.birthday.nil?  %>
            </div>
          </div>
          <div class="waku-detail">
            <div class="waku-detail-header">誕生日</div>
            <div class="waku-detail-data"><%= f.date_select :birthday, {},{class: "select_date"} %></div>
          </div>
          <div class="waku-detail">
            <div class="waku-detail-header">入社年月日</div>
            <div class="waku-detail-data"><%= f.date_select :entrance_date, {}, {class: "select_date"} %></div>
          </div>
          <div class="waku-detail">
            <div class="waku-detail-header">経験年数</div>
            <div class="waku-detail-data"><%= f.number_field :experience %></div>
          </div>
          <div class="waku-detail">
            <div class="waku-detail-header">最終学歴</div>
            <div class="waku-detail-data"><%= f.text_field :education %></div>
          </div>
        </div>
        <a href="#" class="btn btn-warning">CLOSE</a>
        <%= f.submit class: "btn btn-primary" %>
      <% end %>
    </span>
  </div>
  
  <div id="sumika" class="open">
    <a href="#" class="close_overlay">×</a>
    <span class="modal_window waku sumika">
      <div class="waku-header">
        <div class="waku-name">住所</div>
      </div>
      <%= form_for(@employee) do |f| %>
        <div class="waku-detail-group">
          <div class="waku-detail">
            <div class="waku-detail-header">郵便番号</div>
            <div class="waku-detail-data"><%= f.text_field :postalcode %></div>
          </div>
          <div class="waku-detail">
            <div class="waku-detail-header">最寄り駅</div>
            <div class="waku-detail-data"><%= f.text_field :station %></div>
          </div>
          <div class="waku-detail">
            <div class="waku-detail-header">住所</div>
            <div class="waku-detail-data"><%= f.text_area :address, size: "60x4"%></div>
          </div>
        </div>
        <a href="#" class="btn btn-warning">CLOSE</a>
        <%= f.submit class: "btn btn-primary" %>
      <% end %>
    </span>
  </div>

  <div id="appeal" class="open">
    <a href="#" class="close_overlay">×</a>
    <span class="modal_window waku appeal">
      <div class="waku-header">
        <div class="waku-name">アピール</div>
      </div>
      <%= form_for(@employee) do |f| %>
        <div class="waku-detail-group">
          <div class="waku-detail">
            <div class="waku-detail-header">自己PR</div>
            <div class="waku-detail-data"><%= f.text_area :self_pr, rows: "8"%></div>
          </div>
        </div>
        <a href="#" class="btn btn-warning">CLOSE</a>
        <%= f.submit class: "btn btn-primary" %>
      <% end %>
    </span>
  </div>


  <div id="work" class="open">
    <a href="#" class="close_overlay">×</a>
    <span class="modal_window waku work">
      <div class="waku-header">
        <div class="waku-name">技能</div>
      </div>
      <%= form_for([@employee, @employee_skill]) do %>
        <div class="waku-detail-group">
          <div class="waku-detail">
            <div class="waku-detail-data">スキル名</div>
            <div class="waku-detail-data2">レベル</div>
          </div>
          <% @employee_skills.each do |employee_skill| %>
            <%= fields_for("employee_skill[]",employee_skill) do |skill| %>
              <div class="waku-detail">
                <div class="waku-detail-data"><%= skill.select :skill_id, @skills.skills.map{|s|[s.name, s.id]} %></div>
                <div class="waku-detail-data2"><%= skill.number_field :level %></div>
              </div>
            <% end %>
          <% end %> 
        </div> 
        <a href="#" class="btn btn-warning">CLOSE</a>
        <%= submit_tag "更新", :class => "btn btn-primary" %>
      <% end %>
    </span>
  </div>


</div>
