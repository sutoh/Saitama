<%= render "shared/toolbar_for_index", model_name: controller_name , title_name: "社員" %>
<%= link_to "出力", employees_path(format:'pdf'), class: "btn btn-primary" %>

<div class="well">
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @employees.each do |employee| %>
      <tr>
        <td><%= link_to employee.family_name + " " + employee.given_name, employee %></td>
        <td>
          <div class="btn-group">
            <%= link_to '資格', employee_employee_licenses_path(employee), :class => "btn" %>
            <%= link_to 'スキル', employee_employee_skills_path(employee), :class => "btn" %>
            <%= link_to '編集', edit_employee_path(employee), :class => "btn"%>
            <%= link_to '削除', employee,  method: :delete, data: { confirm: '削除してもよろしいですか?' }, :class => "btn btn-warning" %>
          </div>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <div class="gmap">
  <%= gmaps4rails(@json) %>
</div>
</div>

