<!DOCTYPE html>
<html>
<head>
  <title>Saitama</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="navbar">
    <div class="navbar-inner">
      <div class="container-fluid">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
        <%= link_to "Saitama", "#", {name: "top", class: "brand"} %>
        
        <div class="nav-collapse collapse">
          
          <% if user_signed_in? %>
          <ul class="nav">
            <li>
              <%= link_to profile_index_path do %>
              <i class="icon-user"></i> Profile
              <% end %>
            </li>
            
              
            <li class="divider-vertical"></li>
            <li>
              <%= link_to employees_path do %>
              <i class="icon-home"></i> Employee
              <% end %>
            </li>
              
            <li class="divider-vertical"></li>
            <li>
              <%= link_to works_path do %>
              <i class="icon-briefcase"></i> Work
              <% end %>
            </li>
              
            <li class="divider-vertical"></li>
            <li>
              <%= link_to customers_path do %>
              <i class="icon-map-marker"></i> Customer
              <% end %>
            </li>
              
            <li class="divider-vertical"></li>
            <li>
              <%= link_to skills_path do %>
              <i class="icon-star"></i> Skill
              <% end %>
            </li>
              
            <li class="divider-vertical"></li>
            <li>
              <%= link_to licenses_path do %>
              <i class="icon-book"></i> License
              <% end %>
            </li>
              
            <li class="divider-vertical"></li>
            <li>
              <%= link_to departments_path do %>
              <i class="icon-tag"></i> Department
              <% end %>
            </li>
              
            <li class="divider-vertical"></li>
          </ul>
            
          <div class="btn-group pull-right">
            <%= link_to "#", class: "btn dropdown-toggle", "data-toggle" => "dropdown" do %>
            <i class="icon-user"></i> admin <span class="caret"></span>
            <% end %>
              
            <ul class="dropdown-menu">
              <li>
                <%= link_to "#" do %>
                <i class="icon-wrench"></i> Settings
                <% end %>
              </li>
              <li class="divider"></li>
              <li>
                <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="icon-share"></i> Logout
                <% end %>
              </li>
            </ul>
            <% end %>
          </div>
            
        </div>
      </div>
    </div>
  </div>

        
  <div class="container">
    <div class="row">
      <% flash.each do |name, msg| %>
      <div class="alert alert-<%= name == :notice ? "success" : "error" %> fade in">
        <a class="close" data-dismiss="alert">&times;</a>
        <%= msg  %>
      </div>
      <% end %>
      <%= yield %>
    </div>
  </div>
</body>
</html>